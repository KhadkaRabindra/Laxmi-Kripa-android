<?xml version="1.0" encoding="utf-8"?>
<resources>

    <declare-styleable name="PinEntryEditText">
        <attr name="pinAnimationType" format="enum">
            <enum name="popIn" value="0" />
            <enum name="fromBottom" value="1" />
            <enum name="none" value="-1" />
        </attr>
        <attr name="pinCharacterMask" format="string" />
        <attr name="pinRepeatedHint" format="string" />
        <attr name="pinLineStroke" format="dimension" />
        <attr name="pinLineStrokeSelected" format="dimension" />
        <attr name="pinCharacterSpacing" format="dimension" />
        <attr name="pinTextBottomPadding" format="dimension" />
        <attr name="pinLineColors" format="color" />
        <attr name="pinBackgroundDrawable" format="reference" />
        <attr name="pinBackgroundIsSquare" format="boolean" />
    </declare-styleable>

    <declare-styleable name="SuccessLoadingView">
        <!-- animation duration -->
        <attr name="duration" format="integer" />
        <!-- stroke width -->
        <attr name="strokeWidth" format="dimension" />
        <!-- stroke color -->
        <attr name="strokeColor" format="color" />
    </declare-styleable>

    <declare-styleable name="CalendarView">
        <attr name="dateFormat" format="string"/>
    </declare-styleable>


    <declare-styleable name="PinCodeView">
        <attr name="lp_empty_pin_dot" format="integer" />
        <attr name="lp_full_pin_dot" format="integer" />
    </declare-styleable>

    <declare-styleable name="KeyboardButtonView">
        <attr name="lp_keyboard_button_text" format="string" />
        <attr name="lp_keyboard_button_image" format="integer" />
        <attr name="lp_keyboard_button_ripple_enabled" format="boolean" />
        <attr name="lp_pin_forgot_dialog_title" format="string" />
        <attr name="lp_pin_forgot_dialog_content" format="string" />
        <attr name="lp_pin_forgot_dialog_positive" format="string" />
        <attr name="lp_pin_forgot_dialog_negative" format="string" />
    </declare-styleable>

    <declare-styleable name="View">
        <attr name="textFont" format="string"/>
        <attr name="textStyle" format="integer"/>
    </declare-styleable>

    <declare-styleable name="drawableText">
        <attr name="leftDrawable" format="reference|integer" />
        <attr name="rightDrawable" format="reference|integer" />
        <attr name="topDrawable" format="reference|integer" />
        <attr name="bottomDrawable" format="reference|integer" />
        <attr name="drawableWidth" format="dimension" />
        <attr name="drawableHeight" format="dimension" />
    </declare-styleable>


</resources>