<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:id="@+id/llMain"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_marginStart="10dp"
              android:gravity="center_vertical"
              android:layout_marginEnd="10dp"
              android:layout_marginBottom="5dp"
              android:background="@color/colorWhite"
              android:orientation="horizontal">

    <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="wrap_content">
        <TextView
                android:id="@+id/idTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:padding="5dp"
                android:textColor="@color/colorBlack"
                android:textSize="14sp"/>

        <RadioGroup
                android:id="@+id/radio"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

            <RadioButton
                    android:id="@+id/radioOk"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ok"
                    android:checked="true"/>

            <RadioButton
                    android:id="@+id/radioNotOk"
                    android:layout_width="wrap_content"
                    android:checked="false"
                    android:layout_height="wrap_content"
                    android:text="Not Ok"/>

        </RadioGroup>

        <!--<TextView
                android:id="@+id/isOkTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:padding="5dp"
                android:textColor="@color/colorBlack"
                android:textSize="14sp"/>-->

    </LinearLayout>


    <com.maxx.eparchi.utils.view.NoDefaultARSpinner2
            android:id="@+id/spinner"
            android:layout_width="0dp"
            android:layout_weight="1"
            style="@style/DefaultSpinnerStyle"/>

    <!--<include
        android:id="@+id/dashedDividerLine"
        layout="@layout/dotted_divider_line2" />-->

</LinearLayout>