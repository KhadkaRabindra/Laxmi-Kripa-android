<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              style="@style/WidthMatchHeightMatchVertical"
              android:background="@color/color_bg"
              android:clickable="true"
              android:padding="30dp"
              android:orientation="vertical">

    <TextView
            android:layout_gravity="center"
            android:layout_marginBottom="50dp"
            android:textSize="18sp"
            style="@style/load_money_amount_text_style"
            android:text="End Cutting"/>

    <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">


            <LinearLayout
                    android:background="@color/colorWhite"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">


                <!--select amount-->
                <LinearLayout
                        android:layout_marginTop="20dp"
                        android:layout_marginBottom="20dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@null"
                        android:orientation="horizontal">

                    <LinearLayout
                            android:layout_weight="2"
                            style="@style/amount_select_card_bg_style"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:padding="2dp">

                        <TextView
                                style="@style/load_money_amount_text_style"
                                android:text="Mill"/>

                    </LinearLayout>


                    <androidx.cardview.widget.CardView
                            android:id="@+id/twentyMainView"
                            style="@style/amount_select_card_bg_style"
                            app:cardBackgroundColor="@color/nav_selected_item_bg_color"
                            app:cardElevation="3.5dp">

                        <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:orientation="vertical"
                                android:padding="2dp">

                            <TextView
                                    android:id="@+id/twentyTextView"
                                    style="@style/load_money_amount_text_style"
                                    android:text="20"/>

                        </LinearLayout>

                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                            android:id="@+id/twelveMainView"
                            style="@style/amount_select_card_bg_style"
                            app:cardBackgroundColor="@color/nav_selected_item_bg_color"
                            app:cardElevation="3.5dp">

                        <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:orientation="vertical"
                                android:padding="2dp">

                            <TextView
                                    android:id="@+id/twelveTextView"
                                    style="@style/load_money_amount_text_style"
                                    android:text="12"/>

                        </LinearLayout>

                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                            android:id="@+id/nineMainView"
                            style="@style/amount_select_card_bg_style"
                            app:cardBackgroundColor="@color/nav_selected_item_bg_color"
                            app:cardElevation="3.5dp">

                        <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:orientation="vertical"
                                android:padding="2dp">

                            <TextView
                                    android:id="@+id/nineTextView"
                                    style="@style/load_money_amount_text_style"
                                    android:text="9"/>

                        </LinearLayout>

                    </androidx.cardview.widget.CardView>

                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                    android:layout_marginTop="20dp"
                    android:padding="20dp"
                    android:background="@color/colorWhite"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                <TextView
                        android:gravity="start"
                        android:textSize="14sp"
                        android:layout_gravity="start"
                        style="@style/load_money_amount_text_style"
                        android:text="Weight"/>

                <EditText
                        android:id="@+id/weightEditText"
                        android:inputType="numberDecimal"
                        android:textColorHint="@color/gray_text_color"
                        android:hint="Enter here"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>

            </LinearLayout>

            <LinearLayout
                    android:layout_marginTop="20dp"
                    android:padding="20dp"
                    android:background="@color/colorWhite"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                <TextView
                        android:gravity="start"
                        android:textSize="14sp"
                        android:layout_gravity="start"
                        style="@style/load_money_amount_text_style"
                        android:text="Time"/>

                <EditText
                        android:focusable="false"
                        android:clickable="true"
                        android:editable="false"
                        android:id="@+id/timeEditText"
                        android:textColorHint="@color/gray_text_color"
                        android:hint="Enter here"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>

            </LinearLayout>

            <Button
                    android:id="@+id/submitBtn"
                    android:layout_marginTop="50dp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:background="@drawable/btn_bg"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:textColor="@color/colorWhite"
                    android:text="Submit"/>

        </LinearLayout>


    </androidx.core.widget.NestedScrollView>

</LinearLayout>